{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Debug : NestJS Real-Time Chat",
            "localRoot": "${workspaceFolder}",
            "port": 9229,
            "restart": true,
            "address": "localhost",
